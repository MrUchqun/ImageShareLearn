<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    tools:context=".LayoutActivity">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:src="@drawable/im_person_girl_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Brenda Johns"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                tools:ignore="NestedWeights" />

            <TextView
                android:textColor="@color/text_color_low"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="UI Designer"
                android:gravity="center"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:background="#C5C5C5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="216"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:textColor="@color/text_color_low"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Workouts"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="17k"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"/>

                <TextView
                    android:textColor="@color/text_color_low"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Followers"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="133"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"/>

                <TextView
                    android:textColor="@color/text_color_low"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Following"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="#C7D5DD"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Friends"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/im_person_girl_1"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:text="Anna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/im_person_man_1"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:text="Jan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/im_person_girl_2"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:text="Julie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/im_person_man_2"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="@color/text_color"
                        android:layout_marginVertical="5dp"
                        android:gravity="center"
                        android:text="Robert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                    <Button
                        android:background="@drawable/ic_baseline_add_circle_24"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#0270B5"
                        android:gravity="center"
                        android:layout_width="55dp"
                        android:layout_height="55dp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Workouts"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/im_workouts_1"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@color/purple_700"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginStart="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 day training"/>

                    <TextView
                        android:textColor="@color/text_color_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beginner"/>

                </LinearLayout>

                <Button
                    android:backgroundTint="@color/text_color"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/im_workouts_2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@color/purple_700"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginStart="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keep running"/>

                    <TextView
                        android:textColor="@color/text_color_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beginner"/>

                </LinearLayout>

                <Button
                    android:backgroundTint="@color/text_color"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="#C5C5C5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="#0270B5"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_home_24"
                android:layout_marginHorizontal="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <Button
                android:backgroundTint="#0270B5"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_search_24"
                android:layout_marginHorizontal="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <Button
                android:backgroundTint="#0270B5"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_perm_contact_calendar_24"
                android:layout_marginHorizontal="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <Button
                android:backgroundTint="#0270B5"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_work_24"
                android:layout_marginHorizontal="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>



